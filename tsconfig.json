{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "WebWorker", "DOM.Iterable", "DOM.AsyncIterable"],
    "paths": {
      "@/*": ["src/*"],
      "@db/*": ["src/learn/db/*"],
      "@db": ["src/learn/db/index"]
    }
  }
}
