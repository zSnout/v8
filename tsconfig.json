{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ESNext",
    "target": "ES2022",
    "paths": {
      "~/assets/*": ["src/assets/*"],
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  }
}
